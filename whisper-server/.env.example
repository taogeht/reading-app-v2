# Whisper Server Configuration
# Copy this file to .env and customize for your deployment

# Whisper Model Selection
# Options: tiny, base, small, medium, large, large-v2, large-v3
# tiny    - Fastest, least accurate (~39MB)
# base    - Good balance (~142MB) - RECOMMENDED for most use cases
# small   - Better accuracy (~487MB)
# medium  - High accuracy (~1.5GB)
# large   - Best accuracy (~3GB) - Requires significant RAM/VRAM
WHISPER_MODEL=base

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Logging Level
LOG_LEVEL=INFO

# Timezone
TZ=America/New_York

# Resource Limits (for docker-compose)
CPU_LIMIT=2.0
MEMORY_LIMIT=4G
CPU_RESERVATION=1.0
MEMORY_RESERVATION=2G

# unRAID Paths (adjust for your system)
APPDATA_PATH=/mnt/user/appdata/whisper
MODELS_PATH=/mnt/user/appdata/whisper/models
REDIS_PATH=/mnt/user/appdata/whisper/redis
LOGS_PATH=/mnt/user/appdata/whisper/logs

# Security
CORS_ORIGINS=*  # In production, set to your app's domain
API_KEY=  # Optional: Set an API key for authentication