# Railway Database Configuration (Primary)
DATABASE_URL="postgresql://username:password@host:port/database"  # Railway PostgreSQL connection string
PGHOST="your-host.railway.app"                                    # Railway database host
PGPORT="5432"                                                     # Railway database port
PGDATABASE="railway"                                              # Railway database name
PGUSER="postgres"                                                 # Railway database user
PGPASSWORD="your-railway-password"                               # Railway database password

# BetterAuth Configuration
BETTER_AUTH_SECRET="your-32-character-random-secret"             # Required: 32+ character secret for BetterAuth
BETTER_AUTH_URL="http://localhost:5173"                          # Application URL (change for production)  
VITE_BETTER_AUTH_URL="http://localhost:5173"                     # Client-side BetterAuth URL

# CloudFlare R2 Storage Configuration  
CLOUDFLARE_R2_ACCOUNT_ID="your-cloudflare-account-id"           # CloudFlare account ID
CLOUDFLARE_R2_ACCESS_KEY_ID="your-r2-access-key"                # R2 access key
CLOUDFLARE_R2_SECRET_ACCESS_KEY="your-r2-secret-key"            # R2 secret key
CLOUDFLARE_R2_BUCKET_NAME="reading-app-audio"                   # R2 bucket name
CLOUDFLARE_R2_PUBLIC_URL="https://your-r2-domain.com"           # R2 public domain

# Audio Recording Configuration (No Speech Analysis)
# Note: Speech recognition features have been disabled

